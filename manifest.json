{
  "name": "-o-bookmarks",
  "version": "2.0.0.4",
  "manifest_version": 2,
  "description": "The missing bookmark manager for hte Opera Browser",

  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+Z"
      },
      "description": "Open oBook"
    }
  },

  "developer": {
      "name": "Tri M. Nguyen",
      "url": "http://tmn.io/"
  },

  "permissions":[
      "tabs",
      "bookmarks",
      "opera://favicon/",
      "chrome://favicon/"
  ],

  "background": {"scripts": ["scripts/background.js"]},

  "icons": {
    "16": "media/bookmark_red.png",
    "48": "media/bookmark_red.png",
    "128": "media/bookmark_red.png"
  },

  "page_action": {
    "default_icon": "media/bookmark_grey.png",
    "default_title": "Simply doing things",
    "default_popup": "popup.html"
  }

}
